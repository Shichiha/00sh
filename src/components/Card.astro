---
export interface Props {
  title?: string;
  href?: string;
}

const { href, title } = Astro.props;
---

<div class="w-full flex flex-col justify-center rounded-lg bg-tertiary-light dark:bg-tertiary-dark shadow-lg transition-all p-8">
  {
    href ? (
      <a href={href} class="transition-all group rounded-lg">
        {title && <h2 class="text-2xl font-bold ">{title}</h2>}
        <slot />
      </a>
    ) : (
      <div>
        <p>{title && <h2 class="text-2xl font-bold">{title}</h2>}</p>
        <slot />
      </div>
    )
  }
</div>
