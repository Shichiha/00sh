<div id="downArrow" class="w-16 h-16 fixed bottom-10 left-1/2 animate-bounce transition-all hidden">
  <svg xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid meet" viewBox="0 0 24 24"><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12h3.586a1 1 0 0 1 .707 1.707l-6.586 6.586a1 1 0 0 1-1.414 0l-6.586-6.586A1 1 0 0 1 5.414 12H9V9h6v3zm0-9H9m6 3H9"></path></svg>
</div>
<script>
  function pageIsScrollable() {
    return document.body.scrollHeight > window.innerHeight;
  }
  window.addEventListener("scroll", function () {
    var scroll = window.scrollY;
    if (scroll >= 1) {
      document.querySelector("#downArrow").classList.add("opacity-0");
    } else {
      document.querySelector("#downArrow").classList.remove("opacity-0");
    }
  });
  window.addEventListener("load", function () {
	if (pageIsScrollable()) {
	  document.querySelector("#downArrow").classList.remove("hidden");
	}
  });
</script>
