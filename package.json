{
  "name": "shichihachi.github.io",
  "version": "1.0.0",
  "description": "frontend for my website (there is no backend)",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "build:stylus": "stylus --compress ./stylus/ --out ./src/css/",
    "watch:stylus": "stylus --watch ./stylus/ --out ./src/css/",
    "build:11ty": "eleventy",
    "watch:11ty": "eleventy --serve",
    "build": "yarn build:stylus && yarn build:11ty",
    "dev": "concurrently -n stylus,11ty \"npm run watch:stylus\" \"npm run watch:11ty\""
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "pug": "^3.0.2"
  },
  "dependencies": {
    "concurrently": "^7.4.0"
  }
}
