{
  "name": "00sh",
  "version": "2.0.0",
  "description": "frontend for https://00sh.cf/",
  "license": "MIT",
  "scripts": {
    "watch:11ty": "eleventy --serve",
    "watch:sass": "npx sass src/css:_site/css -w --no-source-map",

    "build:11ty": "eleventy",
    "build:sass": "npx sass src/css:_site/css --no-source-map --verbose --version",

    "build": "concurrently \"npm run build:11ty\" \"npm run build:sass\"",
    "dev": "concurrently \"npm run watch:11ty\" \"npm run watch:sass\""
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "pug": "^3.0.2",
    "sass": "^1.55.0",
    "concurrently": "^7.4.0"
  }
}
